#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct Day {
    char *name;
    int date;
    char *activity;
};
struct Day *calendar = NULL;
void create() {
    calendar = (struct Day*)malloc(7 * sizeof(struct Day));
    if (!calendar) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
}
void read() {
    char temp[100];
    for (int i = 0; i < 7; i++) {
        printf("Enter name of day %d: ", i + 1);
        scanf(" %[^\n]", temp);
        calendar[i].name = (char*)malloc((strlen(temp)+1) * sizeof(char));
        strcpy(calendar[i].name, temp);
        printf("Enter date for %s: ", calendar[i].name);
     scanf("%d", &calendar[i].date);
     printf("Enter activity for %s: ", calendar[i].name);
     scanf(" %[^\n]", temp);
     calendar[i].activity = (char*)malloc((strlen(temp)+1) * sizeof(char));
     strcpy(calendar[i].activity, temp);
    }
}

void display() {
    printf("\n----- Weekly Calendar -----\n");
    for (int i = 0; i < 7; i++) {
        printf("Day: %s\nDate: %d\nActivity: %s\n\n", calendar[i].name, calendar[i].date, calendar[i].activity);
    }
}
void freeMemory() {
    for (int i = 0; i < 7; i++) {
        free(calendar[i].name);
        free(calendar[i].activity);
    }
    free(calendar);
}
int main() {
    create();
    read();
    display();
    freeMemory();
    return 0;
}
